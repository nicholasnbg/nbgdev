{% extends 'partials/base.html.twig' %}

{% block content %}
	{% set blog_image = page.media['user://pages/images/blog-header.jpg'].grayscale().contrast(20).brightness(-100).colorize(-35,81,122) %}

	{% if blog_image %}
	<div class="flush-top blog-header blog-header-image" style="background-image: url({{ blog_image.url }});">
	{% else %}
	<div class="blog-header">
	{% endif %}
	</div>
	<div class="full-width-content">
	{{ page.content }}
	</div>
{% endblock %}
